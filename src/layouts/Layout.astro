---
import Hero from '../components/Hero.astro';
import About from '../components/About.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="/css/global.css">
		<link rel="icon" type="image/png" href="/img/favi.png">
		<meta name="theme-color" content="#a675f5">
		<title>We Love Web</title>
	</head>
	<body>
	</body>
</html>

<main>
	<Hero />
	<About />
</main>

<div class="fake-div"></div>

<Footer />

<style>
	main {
		margin: 0 1rem;
		background-color: var(--grey);
		border-radius: 1.48rem;
		min-height: 100vh;
	}

	@media only screen and (min-width: 768px) {
		main {
			margin: 0 var(--radius);
		}
	}

	.fake-div {
		display: none;
		width: 100%;
		height: 1rem;
		background: var(--purple);
		position: sticky;
		bottom: 0;
	}

	@media only screen and (min-width: 768px) {
		.fake-div {
			display: block;
			height: var(--radius);
		}
	}

	.fake-div::before {
		content: '';
		position: absolute;
		left: 1rem;
		bottom: 100%;
		width: var(--radius);
		height: var(--radius);
		background: radial-gradient(circle at right top, transparent 1.48rem, var(--purple) 1.48rem) border-box;
	}

	@media only screen and (min-width: 768px) {
		.fake-div::before {
			left: var(--radius);
		}
	}

	.fake-div::after {
		content: '';
		position: absolute;
		right: 1rem;
		bottom: 100%;
		width: var(--radius);
		height: var(--radius);
		background: radial-gradient(circle at left top, transparent 1.48rem, var(--purple) 1.48rem) border-box;
	}

	@media only screen and (min-width: 768px) {
		.fake-div::after {
			right: var(--radius);
		}
	}
</style>